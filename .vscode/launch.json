{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TS with tsx (node --import)",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--import", "tsx"],
      "program": "${workspaceFolder}/src/index.ts",
      "cwd": "${workspaceFolder}",
      "env": { "NODE_ENV": "development" },
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    }
  ]
}
